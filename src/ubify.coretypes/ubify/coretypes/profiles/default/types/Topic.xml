<object name="Topic" xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="cynin">
 <property name="product">ubify.coretypes</property>
 <property name="title" i18n:translate="">Smart Collection</property>
 <property name="description" i18n:translate="">Multi criteria based saved search</property>
 <property name="content_icon">topic_icon.png</property>
 <property name="view_methods">
  <element value="folder_listing"/>
  <element value="folder_summary_view"/>
  <element value="folder_tabular_view"/>
  <element value="atct_album_view"/>
  <element value="atct_topic_view"/>
  <element value="blog_view"/>
 </property>
 <action title="Subfolders" action_id="subtopics" category="object"
    condition_expr="" url_expr="string:${folder_url}/atct_topic_subtopics"
    visible="False" i18n:attributes="title">
  <permission value="Change portal topics"/>
 </action>
</object>
