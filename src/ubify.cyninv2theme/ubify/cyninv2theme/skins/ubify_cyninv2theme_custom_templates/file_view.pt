<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="cynin">
<head>
    <metal:block metal:fill-slot="head_slot">
        <tal:rssmacro metal:use-macro="here/rss_macro/macros/rss_macro" />
    </metal:block>
</head>
<body>
<div metal:fill-slot="content">
    <tal:main-macro metal:define-macro="main"
           tal:define="size python:here.getObjSize(here);
                       content_type here/get_content_type|here/Format;
                       kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable">

        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <div tal:replace="structure provider:plone.abovecontentbody" />
        <div id="filetitleviewwidget" class="maincontentholder">

            <div id="fileviewfilenamerow">
                <a class="filelink" tal:attributes="href string:${context/absolute_url};">
                    <img tal:attributes="src context/getBestIcon" />
                    <tal:linktitle tal:content="here/getFilename" />
                </a>
            </div>
            <div id="filecontenttyperow">
                <tal:contenttype tal:content="here/getContentType" />
            </div>
            <a tal:attributes="href string:${context/absolute_url};" i18n:translate="link_click_to_download">
                Click to download
            </a>
            <span tal:content="size" />
        </div>
        <div class="filepreviewholder" tal:condition="python: content_type.startswith('text')">
            <div class="filepreviewlabel" i18n:translate="heading_file_contents">File Preview</div>
            <div class="filepreview"
                tal:define="highlighted python:modules['ubify.cyninv2theme'].getFormattedHtmlForTextFile(context)">
                <pre tal:content="structure highlighted" tal:condition="highlighted"></pre>
                <pre tal:content="here/get_data|here/data|nothing" tal:condition="not: highlighted"></pre>
            </div>
        </div>
        <tal:belowcontentmacro metal:use-macro="here/belowcontent_macro/macros/below_content" />
    </tal:main-macro>
</div>
</body>
</html>
