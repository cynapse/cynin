           tal:attributes="title string:${context/Title} ${parttitle}"
           href="bookmarklet">
           <img tal:attributes="src string:${portal_url}/icon-tag_red.png" />
           <tal:translate i18n:translate="link_bookmarklet">Bookmarklet</tal:translate>
